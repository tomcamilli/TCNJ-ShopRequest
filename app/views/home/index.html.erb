<button class="btn go block margin-auto">
	<%= link_to "View Orders", controller:"orderlist" %>
</button>

<button class="btn go block margin-auto">
	<%= link_to "View Graphs", controller:"graphs" %>
</button>
<pre>

</pre>
<div class="limit">
	<h6>Enter a limit on the number of meals ordered per person per day:</h6>
	<div class="limitInput">
		<input id="limit" name="limit" type="number" value="10" min="1" max="99">
	</div>
	<button class="btn bl submitLimit">Submit</button>
</div>
